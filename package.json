{
  "name": "telcoinwiki",
  "version": "1.0.0",
  "private": true,
  "description": "Build tooling and quality checks for the Telcoin Wiki static site",
  "type": "module",
  "engines": {
    "node": ">=22 <23"
  },
  "scripts": {
    "dev": "node tools/run-package-script.mjs telcoinwiki-react dev",
    "format": "node tools/run-package-script.mjs telcoinwiki-react format",
    "lint": "node tools/run-package-script.mjs telcoinwiki-react lint",
    "lint:ci": "node tools/run-package-script.mjs telcoinwiki-react lint:ci",
    "test": "node tools/run-package-script.mjs telcoinwiki-react test",
    "test:ci": "node tools/run-package-script.mjs telcoinwiki-react test:ci",
    "check:html": "html-validate \"telcoinwiki-react/public/**/*.html\"",
    "check:links": "linkinator telcoinwiki-react/public/supabase-test/index.html --recurse --silent --skip \"node_modules|dist\"",
    "prebuild": "node tools/make-supabase-test.mjs telcoinwiki-react/public/supabase-test",
    "build": "node tools/run-package-script.mjs telcoinwiki-react build",
    "preview": "node tools/run-package-script.mjs telcoinwiki-react preview",
    "verify:supabase": "node tools/verify-supabase.mjs",
    "perf": "node tools/run-perf.mjs"
  },
  "devDependencies": {
    "eslint": "^9.37.0",
    "html-validate": "^9.5.5",
    "linkinator": "^4.1.0",
    "prettier": "^3.3.2"
  }
}

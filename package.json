{
  "name": "telcoinwiki",
  "version": "1.0.0",
  "private": true,
  "description": "Build tooling and quality checks for the Telcoin Wiki static site",
  "engines": {
    "node": ">=20 <21"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "format": "prettier --write '**/*.{ts,tsx,js,json,md,css,html}'",
    "lint": "eslint '**/*.{js,ts,tsx}' --max-warnings=0",
    "check:html": "html-validate '**/*.html'",
    "check:links": "linkinator . --recurse --silent --skip 'node_modules|dist'",
    "build:css": "csso styles/index.css --output dist/styles.css",
    "build:js": "mkdir -p dist && node scripts/build-status-data.js && node node_modules/terser/bin/terser js/main.js -o dist/main.js --compress --mangle && node node_modules/terser/bin/terser js/faq.js -o dist/faq.js --compress --mangle && node node_modules/terser/bin/terser js/pools-data.js -o dist/pools.js --compress --mangle",
    "build:img": "node scripts/optimize-images.js",
    "import:content": "node scripts/import-content.js",
    "validate:content": "node -e \"require('fs').readFileSync('src/data/referenceContent.ts') && process.exit(0)\""
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@jridgewell/source-map": "^0.3.3",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.3.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.3",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-react": "^4.3.1",
    "acorn": "^8.11.3",
    "autoprefixer": "^10.4.19",
    "commander": "^2.20.3",
    "css-tree": "~2.2.0",
    "csso": "^5.0.5",
    "csso-cli": "^4.0.2",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "html-validate": "^9.5.5",
    "jsdom": "^24.1.0",
    "linkinator": "^4.1.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "sharp": "^0.33.2",
    "source-map-support": "~0.5.21",
    "tailwindcss": "^3.4.7",
    "terser": "^5.27.0",
    "typescript": "^5.4.5",
    "vite": "^5.3.4",
    "vitest": "^1.6.0"
  }
}
